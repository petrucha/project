<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
	
	<managed-bean>
		<managed-bean-name>userBean</managed-bean-name>
		<managed-bean-class>jsf.UserBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>loginBean</managed-bean-name>
		<managed-bean-class>jsf.LoginBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>userBean</property-name>
			<property-class>jsf.UserBean</property-class>
			<value>#{userBean}</value>
		</managed-property>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>registrationBean</managed-bean-name>
		<managed-bean-class>jsf.RegistrationBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>recordsViewBean</managed-bean-name>
		<managed-bean-class>jsf.RecordsViewBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>profileViewBean</managed-bean-name>
		<managed-bean-class>jsf.ProfileViewBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>chartsViewBean</managed-bean-name>
		<managed-bean-class>jsf.ChartsViewBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	
	<!-- RULES -->
	<navigation-rule>
		<display-name>pages/login.xhtml</display-name>
		<from-view-id>/pages/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>user</from-outcome>
			<to-view-id>/pages/user/user.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<display-name>pages/login.xhtml</display-name>
		<from-view-id>/pages/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>admin</from-outcome>
			<to-view-id>/pages/admin/admin.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<display-name>pages/login.xhtml</display-name>
		<from-view-id>/pages/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>failure</from-outcome>
			<to-view-id>/pages/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<display-name>pages/admin/createProfile.xhtml</display-name>
		<from-view-id>/pages/admin/createProfile.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>failure</from-outcome>
			<to-view-id>/pages/admin/createProfile.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<display-name>pages/login.xhtml</display-name>
		<from-view-id>/pages/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>first</from-outcome>
			<to-view-id>/pages/firstReg/firstRegistration.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<display-name>pages/firstReg/firstRegistration.xhtml</display-name>
		<from-view-id>/pages/firstReg/firstRegistration.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>failure</from-outcome>
			<to-view-id>/pages/firstReg/firstRegistration.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/pages/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<display-name>pages/records/table.xhtml</display-name>
		<from-view-id>/pages/records/table.xhtml</from-view-id>
	</navigation-rule>

	<navigation-rule>
		<display-name>pages/records/charts.xhtml</display-name>
		<from-view-id>/pages/records/charts.xhtml</from-view-id>
	</navigation-rule>

	<validator>
		<display-name>Password Validator</display-name>
		<validator-id>passwordValidator</validator-id>
		<validator-class>util.PasswordValidator</validator-class>
	</validator>
	
	<application />
	
</faces-config>

